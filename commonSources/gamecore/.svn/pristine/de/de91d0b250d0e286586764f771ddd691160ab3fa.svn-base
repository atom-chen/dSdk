        "components/*",
        "managers/*",
        "managers/**/*",
        "wechat/*",
        "wechat/**/*",
        "xiaoyaoji/*",
        "libs/*",
        "utils/*",
        "deer/*",
        "platforms/*",
    ],

    "exclude": [
        "platforms/Base.ts",
        "platforms/QQCM.ts",
        "platforms/JRTT.ts",
        "platforms/FBIN.ts",
        "platforms/Oppo.ts",
        "platforms/IOS.ts"
