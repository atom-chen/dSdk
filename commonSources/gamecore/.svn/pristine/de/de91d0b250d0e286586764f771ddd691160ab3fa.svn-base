    "compilerOptions": {
        "outDir": "../release/1.9",
        "sourceMap": false,
        "inlineSourceMap":false,
        "removeComments": true,
        "allowJs": false,
        "experimentalDecorators": true,
        "declaration":true,
        "emitDeclarationOnly":false,
        // "declarationDir": "../test/assets/Script/gamecore/d",
    },

    "include": [
